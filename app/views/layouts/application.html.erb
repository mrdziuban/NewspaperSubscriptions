<!DOCTYPE html>
<html>
<head>
  <title>NewspaperSubscriptions</title>
  <%= csrf_meta_tags %>
</head>
<body>
<%= "Logged in as: #{@current_user.name}" if @current_user %>
<br>
<%= link_to "Profile", user_url(@current_user) if @current_user %>
<br>
<br>
<% if flash[:notices] %>
  <%= flash[:notices] %>
  <% flash[:notices] = nil %>
<% end %>

<%= yield %>

<br>
<%= link_to "All newspapers", newspapers_url if @current_user %>
<br>
<%= link_to "Create newspaper", new_newspaper_url if @current_user %>
<br>
<br>
<%= button_to "Sign out", sessions_url, method: :delete if @current_user %>
</body>
</html>